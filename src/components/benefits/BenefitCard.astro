---
interface Props {
  title: string;
  description: string;
  iconClass?: string;
  color?: "blue" | "yellow" | "cyan";
}

const {
  title,
  description,
  iconClass = "fa-chart-line",
  color = "blue",
} = Astro.props;

const colorClasses = {
  blue: "bg-[#DCEEFB] text-[#0F609B] border-[#62B0E8]",
  yellow: "bg-[#FFFBEA] text-[#CB6E17] border-[#F7C948]",
  cyan: "bg-[#E0FCFF] text-[#0E7C86] border-[#54D1DB]",
};
---

<div
  class={`p-6 rounded-lg shadow-md border-l-4 ${colorClasses[color]} transition-transform duration-300 hover:transform hover:scale-105`}
>
  <div class="flex items-start mb-4">
    <div
      class={`rounded-full p-3 mr-4 ${color === "blue" ? "bg-[#B6E0FE]" : color === "yellow" ? "bg-[#FFF3C4]" : "bg-[#BEF8FD]"}`}
    >
      <i
        class={`fas ${iconClass} text-xl ${color === "blue" ? "text-[#186FAF]" : color === "yellow" ? "text-[#DE911D]" : "text-[#14919B]"}`}
      ></i>
    </div>
    <h3 class="text-xl font-bold">{title}</h3>
  </div>
  <p class="text-blue-gray-700">{description}</p>
</div>
