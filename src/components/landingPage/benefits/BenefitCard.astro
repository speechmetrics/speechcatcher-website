---
interface Props {
  title: string;
  description: string | string[];
  iconClass?: string;
  color?: "blue" | "yellow" | "cyan";
}

const {
  title,
  description,
  iconClass = "fa-chart-line",
  color = "blue",
} = Astro.props;

const colorClasses = {
  blue: "text-[#0F609B] border-l-[#62B0E8]",
  yellow: "text-[#CB6E17] border-l-[#F7C948]",
  cyan: "text-[#0E7C86] border-l-[#54D1DB]",
};

// Handle both string and string array formats for backward compatibility
const descriptionList = Array.isArray(description)
  ? description
  : [description];
---

<div
  class={`p-6 rounded-lg shadow-md border-l-4 border border-[#BCCCDC] bg-white ${colorClasses[color]}`}
>
  <div class="flex items-start mb-4">
    <div
      class={`rounded-full p-3 mr-4 ${color === "blue" ? "bg-[#B6E0FE]" : color === "yellow" ? "bg-[#FFF3C4]" : "bg-[#BEF8FD]"}`}
    >
      <i
        class={`fas ${iconClass} text-xl ${color === "blue" ? "text-[#186FAF]" : color === "yellow" ? "text-[#DE911D]" : "text-[#14919B]"}`}
      ></i>
    </div>
    <h3 class="text-xl font-bold">{title}</h3>
  </div>
  <ul class="text-blue-gray-700 pl-5 space-y-2 list-disc">
    {descriptionList.map((item) => <li>{item}</li>)}
  </ul>
</div>
