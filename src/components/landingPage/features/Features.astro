---
// Features.astro
import { features } from "../../data/features";
import FeatureCard from "./FeatureCard.astro";
import Badge from "../ui/Badge.astro";
---

<!-- Features Section -->
<section id="features" class="py-20 bg-background flex justify-center">
  <div class="container px-4 md:px-6 mx-auto max-w-6xl">
    <div
      class="flex flex-col items-center justify-center space-y-4 text-center"
    >
      <div class="space-y-2">
        <Badge text="Features" />
        <h2 class="text-3xl font-bold tracking-tighter md:text-4xl/tight">
          Advanced speech testing, simplified
        </h2>
        <p
          class="max-w-[900px] text-muted-foreground md:text-xl/relaxed lg:text-base/relaxed xl:text-xl/relaxed"
        >
          SpeechCatcher equips you with powerful tools designed to streamline
          testing and enhance accuracy.
        </p>
      </div>
    </div>
    <div
      class="mx-auto grid max-w-5xl grid-cols-1 gap-6 py-12 md:grid-cols-2 lg:grid-cols-3"
    >
      {
        features.map((feature) => (
          <FeatureCard
            title={feature.title}
            description={feature.description}
            icon={feature.icon}
          />
        ))
      }
    </div>
  </div>
</section>
