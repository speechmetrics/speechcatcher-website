---
// UserSegments.astro
import { userSegments } from "../../data/users";
import UserCard from "./UserCard.astro";
import Badge from "../ui/Badge.astro";
---

<!-- User Segments Section -->
<section id="users" class="py-20 bg-background flex justify-center">
  <div class="container px-4 md:px-6 max-w-6xl">
    <div
      class="flex flex-col items-center justify-center space-y-4 text-center"
    >
      <div class="space-y-2">
        <Badge text="Who It's For" />
        <h2 class="text-3xl font-bold tracking-tighter md:text-4xl/tight">
          Designed with you in mind
        </h2>
        <p
          class="max-w-[900px] text-muted-foreground md:text-xl/relaxed lg:text-base/relaxed xl:text-xl/relaxed"
        >
          Ideal for clinicians, researchers, educators, students, and
          publishers.
        </p>
      </div>
    </div>
    <div
      class="mx-auto grid max-w-5xl grid-cols-1 gap-6 py-12 md:grid-cols-2 lg:grid-cols-3"
    >
      {
        userSegments.map((segment) => (
          <UserCard title={segment.title} description={segment.description} />
        ))
      }
    </div>
  </div>
</section>
