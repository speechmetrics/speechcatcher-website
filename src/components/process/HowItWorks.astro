---
// HowItWorks.astro
import { processSteps } from "../../data/process";
import ProcessStep from "./ProcessStep.astro";
import Badge from "../ui/Badge.astro";
---

<!-- How It Works Section -->
<section id="how-it-works" class="py-20 bg-background flex justify-center">
  <div class="container max-w-6xl px-4 md:px-6">
    <div
      class="flex flex-col items-center justify-center space-y-4 text-center mb-12"
    >
      <div class="space-y-2">
        <Badge text="How It Works" />
        <h2 class="text-3xl font-bold tracking-tighter md:text-4xl/tight">
          Your pathway to efficient speech testing
        </h2>
        <p
          class="max-w-[900px] text-muted-foreground md:text-xl/relaxed lg:text-base/relaxed xl:text-xl/relaxed"
        >
          Streamline your workflow from data collection to analysis and
          reporting.
        </p>
      </div>
    </div>

    <div class="flex flex-col space-y-8 md:space-y-16">
      {
        processSteps.map((step) => (
          <div class="rounded-2xl bg-white p-6 md:p-2 md:pr-8 shadow-sm border border-blue-100">
            <div class="flex flex-col md:flex-row gap-8 items-center">
              <div class="w-full md:w-2/3 flex justify-center rounded-lg p-4 bg-center bg-cover bg-no-repeat bg-gradient-to-br from-primary/50 to-chart-2/50">
                <div class="relative w-full max-w-[300px] aspect-[2/3] shadow-lg rounded-xl overflow-hidden border-2 border-black/10">
                  <img
                    src={
                      step.screenshot ??
                      `https://placehold.co/400x600?text=SpeechCatcher+App+Step+${step.number}`
                    }
                    alt={`SpeechCatcher iPad App - ${step.title}`}
                    class="absolute inset-0 w-full h-full object-cover"
                  />
                </div>
              </div>
              <div class="w-full md:w-1/3">
                <ProcessStep
                  number={step.number}
                  title={step.title}
                  highlightedTitle={step.highlightedTitle}
                  features={step.features}
                />
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
