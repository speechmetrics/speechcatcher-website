---
import Layout from "../layouts/main.astro";
import Features from "../components/features/Features.astro";
import UserSegments from "../components/users/UserSegments.astro";
import HowItWorks from "../components/process/HowItWorks.astro";
import CallToAction from "../components/CallToAction.astro";
import { v1features } from "../data/v1-features";
import { v1userSegments } from "../data/v1-users";
import { v1processSteps } from "../data/v1-process";
import ProcessStep from "../components/process/ProcessStep.astro";
---

<Layout>
  <!-- Hero Section -->
  <section
    class="py-20 md:py-32 bg-gradient-to-b from-primary/10 to-background flex justify-center"
  >
    <div class="container px-4 md:px-6 mx-auto max-w-[1080px]">
      <div class="grid gap-6 lg:grid-cols-2 lg:gap-12 items-center">
        <div class="space-y-6 mx-auto lg:mx-0 max-w-[600px] lg:max-w-none">
          <div class="space-y-4 mx-auto lg:mx-0 max-w-[600px] lg:max-w-none">
            <h1
              class="text-3xl font-bold tracking-tighter sm:text-5xl xl:text-6xl leading-tight sm:leading-tight"
            >
              Welcoming speech testing into the <span class="text-primary"
                >digital world</span
              >
            </h1>
            <p class="max-w-[600px] text-muted-foreground md:text-xl">
              A complete solution for speech testing right at your fingertips,
              it makes your work easier, faster and better
            </p>
          </div>
          <div class="flex flex-col gap-2 min-[400px]:flex-row">
            <a
              href="#"
              class="inline-flex h-10 items-center justify-center rounded-md bg-primary px-8 text-sm font-medium text-primary-foreground shadow transition-colors hover:bg-primary/90 focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring"
            >
              Get Started
            </a>
            <a
              href="#how-it-works"
              class="inline-flex h-10 items-center justify-center rounded-md border border-input bg-background px-8 text-sm font-medium shadow-sm transition-colors hover:bg-accent hover:text-accent-foreground focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring"
            >
              Learn More
            </a>
          </div>
        </div>
        <div
          class="mx-auto lg:mx-0 relative w-full max-w-[500px] overflow-hidden rounded-xl border bg-background shadow-xl"
        >
          <div
            class="flex h-full w-full items-center justify-center bg-muted/40"
          >
            <img
              src="https://placehold.co/500x500?text=Digital+Speech+Testing"
              alt="Digital Speech Testing with SpeechCatcher"
              class="object-cover"
            />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section id="features" class="py-20 bg-background flex justify-center">
    <div class="container px-4 md:px-6 mx-auto max-w-7xl">
      <div
        class="flex flex-col items-center justify-center space-y-4 text-center"
      >
        <div class="space-y-2">
          <div
            class="inline-block rounded-lg bg-primary/10 px-3 py-1 text-sm text-primary"
          >
            Features
          </div>
          <h2 class="text-3xl font-bold tracking-tighter md:text-4xl/tight">
            Unparalleled methods of speech testing
          </h2>
          <p
            class="max-w-[900px] text-muted-foreground md:text-xl/relaxed lg:text-base/relaxed xl:text-xl/relaxed"
          >
            SpeechCatcher provides a complete solution for speech testing with
            powerful features that save time and improve results.
          </p>
        </div>
      </div>
      <div
        class="mx-auto grid max-w-5xl grid-cols-1 gap-6 py-12 md:grid-cols-2 lg:grid-cols-3"
      >
        {
          v1features.map((feature) => (
            <div class="relative overflow-hidden rounded-lg border bg-background p-2">
              <div class="flex h-[180px] flex-col justify-between rounded-md p-6">
                <div class="space-y-2">
                  <div class="inline-flex h-12 w-12 items-center justify-center rounded-md bg-primary/10 text-primary">
                    <span set:html={feature.icon} />
                  </div>
                  <h3 class="font-bold">{feature.title}</h3>
                  <p class="text-sm text-muted-foreground">
                    {feature.description}
                  </p>
                </div>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Who It's For Section -->
  <section id="who-its-for" class="py-20 bg-primary/5 flex justify-center">
    <div class="container px-4 md:px-6 mx-auto max-w-7xl">
      <div
        class="flex flex-col items-center justify-center space-y-4 text-center"
      >
        <div class="space-y-2">
          <div
            class="inline-block rounded-lg bg-primary/10 px-3 py-1 text-sm text-primary"
          >
            Who It's For
          </div>
          <h2 class="text-3xl font-bold tracking-tighter md:text-4xl/tight">
            SpeechCatcher is for everyone
          </h2>
          <p
            class="max-w-[900px] text-muted-foreground md:text-xl/relaxed lg:text-base/relaxed xl:text-xl/relaxed"
          >
            For clinicians, researchers, teachers and students alike.
          </p>
        </div>
      </div>
      <div
        class="mx-auto grid max-w-5xl gap-6 py-12 md:grid-cols-2 lg:grid-cols-3"
      >
        {
          v1userSegments.map((segment) => (
            <div class="rounded-lg border bg-card p-6 shadow-sm">
              <h3 class="text-xl font-bold mb-2">{segment.title}</h3>
              <p class="text-muted-foreground">{segment.description}</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- How It Works Section -->
  <section id="how-it-works" class="py-20 bg-background flex justify-center">
    <div class="container px-4 md:px-6">
      <div
        class="mx-auto flex max-w-3xl flex-col items-center justify-center space-y-4 text-center"
      >
        <div class="space-y-2">
          <div
            class="inline-block rounded-lg bg-primary/10 px-3 py-1 text-sm text-primary"
          >
            Process
          </div>
          <h2 class="text-3xl font-bold tracking-tighter md:text-4xl/tight">
            How SpeechCatcher works
          </h2>
          <p
            class="max-w-[900px] text-muted-foreground md:text-xl/relaxed lg:text-base/relaxed xl:text-xl/relaxed"
          >
            A streamlined process that makes speech testing efficient and
            effective.
          </p>
        </div>
      </div>
      <div
        class="mx-auto grid max-w-5xl items-start gap-8 py-12 md:grid-cols-3"
      >
        {
          v1processSteps.map((step) => (
            <ProcessStep
              number={step.number}
              title={step.title}
              features={step.features}
            />
          ))
        }
      </div>
    </div>
  </section>

  <!-- Call to Action Section -->
  <section id="contact" class="py-20 bg-primary/5 flex justify-center">
    <div class="container px-4 md:px-6">
      <div class="mx-auto max-w-3xl space-y-8 text-center">
        <div class="space-y-2">
          <h2 class="text-3xl font-bold tracking-tighter md:text-4xl/tight">
            Join our mailing list
          </h2>
          <p class="text-muted-foreground md:text-xl/relaxed">
            Stay updated with the latest features and developments from
            SpeechCatcher.
          </p>
        </div>
        <div class="mx-auto w-full max-w-md space-y-2">
          <form class="flex space-x-2">
            <input
              class="flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50"
              placeholder="Enter your email"
              type="email"
              required
            />
            <button
              type="submit"
              class="inline-flex items-center justify-center rounded-md bg-primary px-4 py-2 text-sm font-medium text-primary-foreground shadow hover:bg-primary/90 focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring"
            >
              Subscribe
            </button>
          </form>
          <p class="text-xs text-muted-foreground">
            By subscribing, you agree to our terms of service and privacy
            policy.
          </p>
        </div>
      </div>
    </div>
  </section>
</Layout>
